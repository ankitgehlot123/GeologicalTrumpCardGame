<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/cat_back"
    android:gravity="center"
    tools:context="kookyinfomedia.com.gtcg.Category">

    <Button
        android:id="@+id/asia"
        android:layout_width="180dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="98dp"
        android:layout_marginLeft="@dimen/asia_marginLeft"
        android:layout_marginStart="@dimen/asia_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAsia"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.645" />

    <Button
        android:id="@+id/northamerica"
        android:layout_width="99dp"
        android:layout_height="143dp"
        android:layout_alignBaseline="@+id/asia"
        android:layout_alignBottom="@+id/asia"
        android:layout_marginBottom="@dimen/northamerica_marginBottom"
        android:layout_marginEnd="@dimen/northamerica_marginEnd"
        android:layout_marginLeft="@dimen/northamerica_marginLeft"
        android:layout_marginRight="@dimen/northamerica_marginRight"
        android:layout_marginStart="@dimen/northamerica_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckNorthAmerica"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/europe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/northamerica_marginTop"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/southamerica"
        android:layout_width="81dp"
        android:layout_height="105dp"
        android:layout_alignBaseline="@+id/northamerica"
        android:layout_alignBottom="@+id/northamerica"
        android:layout_marginLeft="@dimen/southamerica_marginLeft"
        android:layout_marginRight="@dimen/southamerica_marginRight"
        android:layout_marginStart="@dimen/southamerica_marginStart"
        android:layout_marginTop="158dp"
        android:layout_toEndOf="@+id/northamerica"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckSouthAmerica"
        android:textAllCaps="false"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/africa"
        android:layout_width="99dp"
        android:layout_height="124dp"
        android:layout_alignBaseline="@+id/southamerica"
        android:layout_alignBottom="@+id/southamerica"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="@dimen/africa_marginEnd"
        android:layout_marginLeft="@dimen/africa_marginEnd"
        android:layout_marginRight="@dimen/africa_marginRight"
        android:layout_marginStart="@dimen/africa_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAfrica"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/europe"
        android:layout_width="97dp"
        android:layout_height="82dp"
        android:layout_below="@+id/northamerica"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/europe_marginStart"
        android:layout_marginTop="@dimen/europe_marginTop"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckEurope"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/africa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="0.467" />

    <Button
        android:id="@+id/australia"
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:layout_alignBaseline="@+id/europe"
        android:layout_alignBottom="@+id/europe"
        android:layout_marginBottom="@dimen/australia_marginBottom"
        android:layout_marginEnd="@dimen/australia_marginEnd"
        android:layout_marginLeft="@dimen/australia_marginLeft"
        android:layout_marginRight="@dimen/australia_marginRight"
        android:layout_marginStart="@dimen/australia_marginStart"
        android:layout_marginTop="@dimen/australia_marginTop"
        android:layout_toStartOf="@+id/africa"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAustralia"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.979"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.939" />

    <LinearLayout
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/linear_layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.74"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tap" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/text_view_layout_width"
            android:layout_height="@dimen/text_view_layout_height"
            android:layout_alignStart="@+id/gifImageView"
            android:layout_centerVertical="false"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_view_marginStart"
            android:background="@drawable/chatbubble"
            android:padding="@dimen/text_view_padding"
            android:text="Tap on any Continent to play."
            android:textAlignment="center"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
