                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Administrative units"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/valAUnits"
                        android:layout_width="@dimen/valWidth"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/txtAUnits"
                        android:text="valAUnit"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLay5"
