                android:layout_height="250dp"
                android:padding="2dp">

                <LinearLayout
                    android:id="@+id/linLayImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp">

                    <ImageView
                        android:id="@+id/imgCard1_flag"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp" />

                    <ImageView
                        android:id="@+id/imgCard1_map"
                        android:layout_width="80dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLayCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLayImg"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/txtCountry1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country1"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLayCountry"
                    android:onClick="areaSelect">

                    <TextView
                        android:id="@+id/txtArea"
                        android:layout_width="@dimen/textWidth"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Area (Rank)"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/valArea"
                        android:layout_width="@dimen/valWidth"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/txtArea"
                        android:text="valArea"
                        android:textSize="@dimen/textSize" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linLay2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLay1"
                    android:onClick="populationSelect">

                    <TextView
                        android:id="@+id/txtPopulation"
                        android:layout_width="@dimen/textWidth"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Population (Rank)"
                        android:textSize="@dimen/textSize" />

                    <TextView
                        android:id="@+id/valPopulation"
                        android:layout_width="@dimen/valWidth"
