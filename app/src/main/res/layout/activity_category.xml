<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/world_normal"
    android:hapticFeedbackEnabled="false"
    android:id="@+id/rel">


    <RelativeLayout
        android:id="@+id/selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="false"
        android:background="#00FFFFFF" >

        

        <ImageButton
            android:id="@+id/australia"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_60dp"
            android:background="#00ffffff"
            android:onClick="openDeckAustralia"
            android:layout_marginBottom="21dp"
            android:layout_above="@+id/antarctica"
            android:layout_alignEnd="@+id/asia" />
        <ImageButton
        android:id="@+id/antarctica"
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffffff" />
        <ImageButton
            android:id="@+id/northAmerica"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_height="@dimen/dimen_200dp"
            android:background="#00ffffff"
            android:onClick="openDeckNorthAmerica"
            android:layout_marginEnd="20dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/africa"
            android:layout_above="@+id/southAmerica" />

        <ImageButton
            android:id="@+id/africa"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_120dp"
            android:background="#00ffffff"
            android:onClick="openDeckAfrica"
            android:layout_below="@+id/europe"
            android:layout_marginRight="@dimen/dimen_11dp"
            android:layout_centerHorizontal="true" />
        <ImageButton
            android:background="#00ffffff"
            android:id="@+id/europe"
            android:layout_width="@dimen/dimen_95dp"
            android:layout_height="@dimen/dimen_90dp"
            android:onClick="openDeckEurope"
            android:layout_alignTop="@+id/asia"
            android:layout_toStartOf="@+id/asia"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:id="@+id/asia"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_200dp"
            android:background="#00ffffff"
            android:onClick="openDeckAsia"
            android:layout_above="@+id/australia"
            android:layout_toEndOf="@+id/africa" >

        </ImageButton>

        <ImageButton
            android:id="@+id/india"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_60dp"
            android:background="#00ffffff"
            android:onClick="openDeckIndia"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/africa" />

        <ImageButton
            android:background="#00ffffff"
            android:id="@+id/southAmerica"
            android:layout_width="@dimen/dimen_70dp"
            android:layout_height="@dimen/dimen_110dp"
            android:onClick="openDeckSouthAmerica"
            android:layout_marginEnd="22dp"
            android:layout_alignBottom="@+id/australia"
            android:layout_alignEnd="@+id/northAmerica" >

        </ImageButton>


    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/earth1"
        android:onClick="openDeckWorld"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
