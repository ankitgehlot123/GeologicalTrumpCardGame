<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:hapticFeedbackEnabled="false"
    android:id="@+id/rel">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="0dp">

        <ImageView
            android:id="@+id/northAmerica"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_160dp"
            android:onClick="openDeckNorthAmerica"
            android:src="@drawable/north_america" />

        <ImageView
            android:id="@+id/southAmerica"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_below="@+id/northAmerica"
            android:layout_marginLeft="@dimen/dimen_60dp"
            android:onClick="openDeckSouthAmerica"
            android:src="@drawable/south_america" />

        <ImageView
            android:id="@+id/europe"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_110dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:onClick="openDeckEurope"
            android:layout_toRightOf="@+id/northAmerica"
            android:src="@drawable/europe" />


        <ImageView
            android:id="@+id/asia"
            android:layout_width="@dimen/dimen_160dp"
            android:layout_height="@dimen/dimen_200dp"
            android:onClick="openDeckAsia"
            android:layout_toRightOf="@+id/europe"
            android:src="@drawable/asia" />


        <ImageView
            android:id="@+id/africa"
            android:layout_width="@dimen/dimen_120dp"
            android:layout_height="@dimen/dimen_110dp"
            android:onClick="openDeckAfrica"
            android:layout_below="@+id/europe"
            android:layout_marginTop="@dimen/dimen_minus"
            android:layout_toRightOf="@id/southAmerica"
            android:src="@drawable/africa" />

        <ImageView
            android:id="@+id/australia"
            android:layout_width="@dimen/dimen_90dp"
            android:layout_height="@dimen/dimen_80dp"
            android:onClick="openDeckAustralia"
            android:layout_below="@+id/asia"
            android:layout_marginLeft="@dimen/dimen_100dp"
            android:layout_toRightOf="@+id/africa"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:layout_marginRight="@dimen/dimen_80dp"
            android:src="@drawable/australia" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dimen_250dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/antarctica"
        android:id="@+id/antarctica"/>


    <RelativeLayout
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <LinearLayout
            android:id="@+id/pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dimen_105dp"
            android:padding="@dimen/dimen_40dp">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifImageView"
                android:layout_width="@dimen/dimen_55dp"
                android:layout_height="@dimen/dimen_45dp"
                android:background="@drawable/tap" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="@dimen/dimen_210dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignStart="@+id/gifImageView"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:background="@drawable/chatbubble"
                android:padding="@dimen/dimen_10dp"
                android:text="Tap on any Continent to play."
                android:textAlignment="center"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/dimen_14dp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_100dp"
        android:layout_centerInParent="true"
        android:id="@+id/img"/>

</RelativeLayout>
