<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_230dp"
    android:layout_height="@dimen/dimen_130dp"
    android:background="@drawable/exitpopup">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_70dp"
        android:layout_marginBottom="@dimen/dimen_20dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/righttick" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_toRightOf="@+id/image"
            app:srcCompat="@drawable/wrong" />
    </RelativeLayout>
</RelativeLayout>