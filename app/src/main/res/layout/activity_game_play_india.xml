                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/valPopulation"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
