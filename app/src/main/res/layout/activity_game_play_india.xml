            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/cardBigLeft"
            android:layout_width="@dimen/dimen_170dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_below="@id/relUpper"
            android:layout_toLeftOf="@+id/relUpper"
