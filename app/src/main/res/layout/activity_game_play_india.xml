<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="kookyinfomedia.com.gtcg.GamePlay">

    <RelativeLayout
        android:id="@+id/relPopup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relLoad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/loadbackgreen"
        android:visibility="visible">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/loading"
            android:rotation="10" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#CCFFFFFF" />

    <RelativeLayout
        android:id="@+id/fullrel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <Button
            android:id="@+id/cardBack"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/pause"
            android:onClick="backLI">

        </Button>


        <Button
            android:id="@+id/cardLoudspeaker"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_5dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:background="@drawable/soundon"
            android:innerRadius="0dp"
            android:onClick="soundOptI">

        </Button>

        <ImageView
            android:id="@+id/cardSmallLeft"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-40dp"
            android:src="@drawable/card_left" />


        <ImageView
            android:id="@+id/cardSmallRight"
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-40dp"
            android:src="@drawable/card_right" />

        <RelativeLayout
            android:id="@+id/relUpper"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/cardP1"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_below="@id/relUpper"
            android:layout_toLeftOf="@+id/relUpper"
            android:background="#FFFFFF"
            android:innerRadius="0dp"
            android:onClick="showCardI"
            android:padding="@dimen/dimen_2dp"
            android:shape="ring"
            android:thicknessRatio="2"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <RelativeLayout
                android:id="@+id/relP1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_240dp"
                android:padding="@dimen/dimen_2dp">

                <RelativeLayout
                    android:id="@+id/relP1_border"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_1dp"
                    android:background="@drawable/layout_white_border"
                    android:padding="@dimen/dimen_2dp">

                    <LinearLayout
                        android:id="@+id/linLayImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/imgCard1_State"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtStateName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorCoffee"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAPITAL"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:textSize="@dimen/dimen_10dp"
                                android:id="@+id/txtCapitall1"
                                android:textColor="@color/color_Teal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FESTIVAL"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:id="@+id/txtFestt1"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#e0678f"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAPITAL"
                                android:layout_below="@+id/txtCapitall1"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:textSize="@dimen/dimen_10dp"
                                android:id="@+id/txtCapital"
                                android:textColor="@color/color_Teal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FESTIVAL"
                                android:id="@+id/txtFest"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_below="@+id/txtFestt1"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#e0678f"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lin1back"
                        android:layout_below="@+id/linLayImg">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLayImg"
                        android:onClick="areaSelectI"
                        >

                        <TextView
                            android:id="@+id/txtArea"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Area (Rank)"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/valArea"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_toRightOf="@+id/txtArea"
                            android:text="valArea"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay1"
                        android:onClick="populationSelectI">

                        <TextView
                            android:id="@+id/txtPopulation"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Population (Rank)"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/valPopulation"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_toRightOf="@+id/txtPopulation"
                            android:text="valPop"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay2"
                        android:onClick="districtSelectI">

                        <TextView
                            android:id="@+id/txtDistrict"
                            android:layout_width="@dimen/dimen_90dp"
