                        <TextView
                            android:id="@+id/txtNationalPark"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="National Parks"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/valNationalPark"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_toRightOf="@+id/txtNationalPark"
                            android:text="valNat"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay4"
                        android:onClick="riverSelectI">

                        <TextView
                            android:id="@+id/txtRiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txtNationalPark"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Rivers"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <Spinner
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/spinRiver"
                            android:layout_width="@dimen/dimen_130dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/valNationalPark"
                            android:layout_toRightOf="@+id/txtBCountries"
                            android:textAlignment="viewEnd" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay5"
                        android:onClick="cropSelectI">

                        <TextView
                            android:id="@+id/txtCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinRiver"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:text="Crops"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <Spinner
                            android:id="@+id/spinCrop"
                            android:layout_width="@dimen/dimen_130dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinRiver"
                            android:layout_toRightOf="@+id/txtCrop"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:id="@+id/linLay7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay6"
                        android:onClick="mineralSelectI">

                        <TextView
                            android:id="@+id/txtMineral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinCrop"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:text="Minerals"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <Spinner
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:id="@+id/spinMineral"
                            android:layout_width="@dimen/dimen_120dp"
                            android:layout_marginLeft="@dimen/dimen_2dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/spinCrop"
                            android:layout_toRightOf="@+id/txtMineral"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/cardBigLeft"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_below="@id/relUpper"
            android:layout_toLeftOf="@+id/relUpper"
            android:onClick="showCardI"
            android:padding="@dimen/dimen_2dp"
            android:src="@drawable/card" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardP3"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_237dp"
            android:layout_below="@id/relUpper"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:layout_toLeftOf="@+id/relUpper"
            android:alpha="1"
            android:background="@drawable/cardborder"
            android:innerRadius="0dp"
            android:padding="@dimen/dimen_2dp"
            android:shape="ring"
            android:thicknessRatio="2"
            app:cardCornerRadius="@dimen/dimen_10dp" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardP2"
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_below="@id/relUpper"
            android:layout_toRightOf="@+id/relUpper"
            android:background="#FFFFFF"
            android:innerRadius="0dp"
            android:padding="@dimen/dimen_2dp"
            android:shape="ring"
            android:thicknessRatio="2"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <RelativeLayout
                android:id="@+id/relP2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_240dp"
                android:padding="@dimen/dimen_2dp">

                <RelativeLayout
                    android:id="@+id/relP2_border"
                    android:layout_width="wrap_content"
                    android:background="@drawable/layout_white_border"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_1dp"
                    android:padding="@dimen/dimen_2dp">

                    <LinearLayout
                        android:id="@+id/linLayImg2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_2dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/imgCard2_State"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txtStateName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/colorCoffee"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAPITAL"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:textSize="@dimen/dimen_10dp"
                                android:id="@+id/txtCapitall"
                                android:textColor="@color/color_Teal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FESTIVAL"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:id="@+id/txtFestt"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#e0678f"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CAPITAL"
                                android:layout_below="@+id/txtCapitall"
                                android:layout_marginLeft="@dimen/dimen_5dp"
                                android:textSize="@dimen/dimen_10dp"
                                android:id="@+id/txtCapital2"
                                android:textColor="@color/color_Teal"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FESTIVAL"
                                android:id="@+id/txtFest2"
                                android:textSize="@dimen/dimen_10dp"
                                android:layout_below="@+id/txtFestt"
                                android:layout_marginRight="@dimen/dimen_5dp"
                                android:layout_alignParentRight="true"
                                android:textColor="#e0678f"/>
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:id="@+id/lin2back"
                        android:layout_below="@+id/linLayImg2">
                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay11"
                        android:layout_width="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLayImg2">

                        <TextView
                            android:id="@+id/txtArea2"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Area (Rank)"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/valArea2"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_toRightOf="@+id/txtArea2"
                            android:text="valArea"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay11">

                        <TextView
                            android:id="@+id/txtPopulation2"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:text="Population (Rank)"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />

                        <TextView
                            android:id="@+id/valPopulation2"
                            android:layout_width="@dimen/dimen_70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="-3dp"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_toRightOf="@+id/txtPopulation2"
                            android:text="valPop"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/dimen_10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dimen_3dp"
                        android:id="@+id/linLay13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay12">

                        <TextView
                            android:id="@+id/txtDistrict2"
                            android:layout_width="@dimen/dimen_90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:layout_marginRight="@dimen/dimen_2dp"
