        <RelativeLayout
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.CardView
                android:id="@+id/Score"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:background="@drawable/score_ellipse"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="0"
                app:cardCornerRadius="@dimen/dimen_25dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    app:srcCompat="@drawable/score_ellipse" />

                <TextView
                    android:id="@+id/txtScoreVal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_10dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/txtScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="@dimen/dimen_12dp"
                    android:text="Score"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_12dp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/cardCoinLeft"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:src="@drawable/human"/>

            <ImageView
                android:id="@+id/cardCoinRight"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/computer"/>

            <LinearLayout
                android:id="@+id/linLayBottomRight"
                android:layout_width="@dimen/dimen_160dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_9dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_toStartOf="@+id/cardCoinRight"
                android:background="@drawable/score_bar">

                <TextView
                    android:id="@+id/txtOppVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtOppCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Opponent Cards"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayBottomLeft"
                android:layout_width="@dimen/dimen_160dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_alignParentBottom="false"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_2dp"
                android:layout_toEndOf="@+id/cardCoinLeft"
                android:background="@drawable/score_bar"
                android:padding="@dimen/dimen_3dp">

                <TextView
                    android:id="@+id/txtMyCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_55dp"
                    android:text="Your Cards"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtMyVal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:text="00"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/dimen_15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtScoreVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="0000"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dimen_10dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/relUpper2"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_20dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/toast"
            android:layout_width="@dimen/dimen_250dp"
            android:layout_height="@dimen/dimen_250dp"
            android:layout_below="@+id/relUpper2"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>
</RelativeLayout>