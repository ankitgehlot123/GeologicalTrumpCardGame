            android:id="@+id/cardP1"
            android:layout_width="@dimen/dimen_175dp"
            android:layout_height="@dimen/dimen_240dp"
            android:layout_below="@id/relUpper"
            android:layout_toLeftOf="@+id/relUpper"
            android:background="#FFFFFF"
            android:innerRadius="0dp"
            android:onClick="showCard"
            android:shape="ring"
            android:thicknessRatio="2"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_240dp"
                android:layout_margin="1dp"
                android:padding="@dimen/dimen_1dp"
                android:id="@+id/relP1">

                <RelativeLayout
                android:background="@drawable/layout_white_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/relP1_border"
                    android:layout_margin="@dimen/dimen_1dp">
            <LinearLayout
                    android:id="@+id/linLayImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen_2dp"
                     android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/imgCard1_map"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/txtCountry1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country2"
                        android:textColor="#ed7899"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/dimen_11dp" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/color_Teal"
                        android:text="CAPITAL"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:id="@+id/txtCapitall1"
                        android:layout_alignParentLeft="true"/>
