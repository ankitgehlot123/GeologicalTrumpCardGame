                    <TextView
                        android:id="@+id/txtHPoint"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtBCountries"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:text="Highest Point"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/valHPoint"
                        android:layout_width="@dimen/dimen_70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/valBCountries"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@+id/txtHPoint"
                        android:text="valhPoin"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/colorPrimaryDark"/>

                </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linLay27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linLay15">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtHPointName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:layout_marginLeft="@dimen/dimen_5dp"
                            android:textSize="@dimen/dimen_10dp"
                            android:textColor="@color/colorPrimaryDark"/>

                        <TextView
                            android:textAlignment="center"
                            android:id="@+id/valHPointName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_2dp"
                            android:layout_marginBottom="@dimen/dimen_2dp"
                            android:layout_marginLeft="@dimen/dimen_10dp"
                            android:text="valHPo"
                            android:layout_marginRight="@dimen/dimen_20dp"
                            android:layout_alignParentRight="true"
                            android:textSize="@dimen/dimen_10dp"
                            android:textColor="@color/colorPrimaryDark"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ImageView
