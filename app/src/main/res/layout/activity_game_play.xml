                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/color_Teal"
                        android:text="CAPITAL"
                        android:layout_marginLeft="@dimen/dimen_5dp"
                        android:id="@+id/txtCapitalName"
                        android:layout_below="@+id/txtCapitall1"
                        android:layout_alignParentLeft="true"/>
                    <ImageView
                        android:id="@+id/imgCard1_flag"
                        android:layout_width="@dimen/dimen_60dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:layout_toLeftOf="@id/txtCapitalName"
                        android:layout_marginLeft="@dimen/dimen_10dp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/lin1back"
                    android:layout_below="@+id/linLayImg">
                <LinearLayout
                    android:id="@+id/linLay1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linLayImg"
                    android:onClick="areaSelect">

                    <TextView
                        android:id="@+id/txtArea"
                        android:layout_width="@dimen/dimen_90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="@dimen/dimen_2dp"
                        android:layout_marginRight="@dimen/dimen_2dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:text="Area (Rank)"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/colorPrimaryDark"/>

                    <TextView
                        android:textAlignment="center"
                        android:id="@+id/valArea"
                        android:layout_width="@dimen/dimen_70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_5dp"
                        android:layout_marginLeft="-10dp"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:layout_toRightOf="@+id/txtArea"
                        android:text="valArea"
                        android:textSize="@dimen/dimen_10dp"
                        android:textColor="@color/colorPrimaryDark"/>
                </LinearLayout>

                <LinearLayout
