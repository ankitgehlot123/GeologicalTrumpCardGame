<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:hapticFeedbackEnabled="false">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="@dimen/dimen_470dp"
        android:layout_height="@dimen/dimen_180dp"
        android:layout_centerInParent="true"
        android:background="@drawable/deck_select_back"
        android:paddingBottom="@dimen/dimen_25dp"
        android:paddingEnd="@dimen/dimen_25dp"
        android:paddingStart="@dimen/dimen_25dp"
        android:paddingTop="@dimen/dimen_25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt"/>
    <Button
        android:id="@+id/deck16"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_below="@+id/txt"
        android:background="@drawable/card_16"
        android:elevation="@dimen/dimen_10dp"
        android:onClick="deckSelected16"
        android:layout_toLeftOf="@+id/deck32" />

    <Button
        android:id="@+id/deck32"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_below="@+id/txt"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_32"
        android:elevation="@dimen/dimen_10dp"
        android:onClick="deckSelected32"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_40dp" />

    <Button
        android:id="@+id/deck52"
        android:layout_width="@dimen/dimen_120dp"
        android:layout_height="@dimen/dimen_110dp"
        android:layout_below="@+id/txt"
        android:layout_toEndOf="@+id/deck32"
        android:background="@drawable/card_52"
        android:elevation="@dimen/dimen_10dp"
        android:onClick="deckSelected52"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_40dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/sound"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/soundon"
        android:onClick="soundDeck" />

    <Button
        android:id="@+id/back"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/backbtn"
        android:onClick="back" />

</RelativeLayout>
