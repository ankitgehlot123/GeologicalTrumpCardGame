<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/cat_back"
    android:gravity="center"
    tools:context="kookyinfomedia.com.gtcg.Category">

    <Button
        android:id="@+id/asia"
        android:layout_width="354dp"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/asia_marginBottom"
        android:layout_marginLeft="@dimen/asia_marginLeft"
        android:layout_marginStart="@dimen/asia_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAsia"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/asia_marginTop"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="554dp"
        tools:layout_editor_absoluteY="62dp" />

    <Button
        android:id="@+id/northamerica"
        android:layout_width="220dp"
        android:layout_height="231dp"
        android:layout_alignBaseline="@+id/asia"
        android:layout_alignBottom="@+id/asia"
        android:layout_marginBottom="@dimen/northamerica_marginBottom"
        android:layout_marginEnd="@dimen/northamerica_marginEnd"
        android:layout_marginLeft="@dimen/northamerica_marginLeft"
        android:layout_marginRight="@dimen/northamerica_marginRight"
        android:layout_marginStart="@dimen/northamerica_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckNorthAmerica"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/europe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/northamerica_marginTop"
        app:layout_constraintVertical_bias="0.188" />

    <Button
        android:id="@+id/southamerica"
        android:layout_width="146dp"
        android:layout_height="223dp"
        android:layout_alignBaseline="@+id/northamerica"
        android:layout_alignBottom="@+id/northamerica"
        android:layout_marginBottom="@dimen/southamerica_marginBottom"
        android:layout_marginLeft="@dimen/southamerica_marginLeft"
        android:layout_marginRight="@dimen/southamerica_marginRight"
        android:layout_marginStart="@dimen/southamerica_marginStart"
        android:layout_marginTop="@dimen/southamerica_marginTop"
        android:layout_toEndOf="@+id/northamerica"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckSouthAmerica"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726" />

    <Button
        android:id="@+id/africa"
        android:layout_width="184dp"
        android:layout_height="221dp"
        android:layout_alignBaseline="@+id/southamerica"
        android:layout_alignBottom="@+id/southamerica"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="@dimen/africa_marginEnd"
        android:layout_marginLeft="@dimen/africa_marginEnd"
        android:layout_marginRight="@dimen/africa_marginRight"
        android:layout_marginStart="@dimen/africa_marginStart"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAfrica"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/europe"
        android:layout_width="149dp"
        android:layout_height="130dp"
        android:layout_below="@+id/northamerica"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/europe_marginStart"
        android:layout_marginTop="@dimen/europe_marginTop"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckEurope"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/africa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78"
        app:layout_constraintHorizontal_bias="0.483"
        tools:layout_editor_absoluteY="89dp" />

    <Button
        android:id="@+id/australia"
        android:layout_width="@dimen/australia_width"
        android:layout_height="@dimen/australia_height"
        android:layout_alignBaseline="@+id/europe"
        android:layout_alignBottom="@+id/europe"
        android:layout_marginBottom="@dimen/australia_marginBottom"
        android:layout_marginEnd="@dimen/australia_marginEnd"
        android:layout_marginLeft="@dimen/australia_marginLeft"
        android:layout_marginRight="@dimen/australia_marginRight"
        android:layout_marginStart="@dimen/australia_marginStart"
        android:layout_marginTop="@dimen/australia_marginTop"
        android:layout_toStartOf="@+id/africa"
        android:alpha="1"
        android:fontFamily="serif"
        android:onClick="openDeckAustralia"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

    <LinearLayout
        android:id="@+id/pop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/linear_layout_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tap" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/text_view_layout_width"
            android:layout_height="@dimen/text_view_layout_height"
            android:layout_alignStart="@+id/gifImageView"
            android:layout_centerVertical="false"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/text_view_marginStart"
            android:background="@drawable/chatbubble"
            android:padding="@dimen/text_view_padding"
            android:text="Tap on any Continent to play."
            android:textAlignment="center"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
